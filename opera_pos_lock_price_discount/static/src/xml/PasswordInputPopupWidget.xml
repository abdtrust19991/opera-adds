<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="PasswordInputPopupWidget" owl="1">
        <div class="modal-dialog">
            <div class="popup popup-confirm">
                <p class="title" style="background-color: rgb(110,200,155); color: #fff;">Password</p>

                		<div class="body">
		     				<div class='div-container'>
		     					<input t-model="state.inputValue" t-ref="input" type="password" class="input-field"
                                       name="password" autocomplete="off" style='margin-top: 15px;'></input>

		                    </div>
                        </div>

                <div class="footer" style="background-color: rgb(110,200,155); color: #fff;">
                    <div class="button cancel" style="background-color: #0075AC; color: #fff;" t-on-click="cancel">
                        Cancel
                    </div>
                    <div class="button confirm" style="background-color: #0075AC; color: #fff;" t-on-click="confirm">
                        Confirm
                    </div>
                </div>
            </div>
        </div>
    </t>

</templates>